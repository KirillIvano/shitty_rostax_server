datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URl")
}

model categories {
  id       Int        @id(map: "PK_24dbc6126a28ff948da33e97d3b") @default(autoincrement())
  name     String     @db.VarChar
  image    String     @db.VarChar
  products products[]
}

model products {
  id               Int        @id(map: "PK_0806c755e0aca124e67c0cf6d7d") @default(autoincrement())
  name             String     @db.VarChar
  shortDescription String     @db.VarChar
  image            String     @default("") @db.VarChar
  description      String     @default("") @db.VarChar
  price            Int?
  certificate      String     @default("") @db.VarChar
  categoryId       Int
  categories       categories @relation(fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "FK_ff56834e735fa78a15d0cf21926")
}

model session {
    id        Int      @id @default(autoincrement())
    timestamp DateTime @default(now())
    hash      String
}

generator client {
    provider = "prisma-client-js"
}